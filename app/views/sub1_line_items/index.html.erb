<h1>Sub1 Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Sub1 category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub1_line_items.each do |sub1_line_item| %>
      <tr>
        <td><%= sub1_line_item.product %></td>
        <td><%= sub1_line_item.sub1_category %></td>
        <td><%= link_to 'Show', sub1_line_item %></td>
        <td><%= link_to 'Edit', edit_sub1_line_item_path(sub1_line_item) %></td>
        <td><%= link_to 'Destroy', sub1_line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

